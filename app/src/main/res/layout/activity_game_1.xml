<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/masjid">

    <ImageView
        android:id="@+id/a"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_alif"
        android:padding="5dp"
        android:background="@drawable/backgroud_circle"
        android:tag="A" />

    <ImageView
        android:id="@+id/b"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@null"
        android:padding="5dp"
        android:background="@drawable/backgroud_circle"
        android:src="@drawable/ic_ghoin"
        android:tag="B" />

    <ImageView
        android:id="@+id/c"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:contentDescription="@null"
        android:padding="5dp"
        android:background="@drawable/backgroud_circle"
        android:src="@drawable/ic_dhlo"
        android:tag="C" />

    <ImageView
        android:id="@+id/d"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="215dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_kaf"
        android:padding="5dp"
        android:background="@drawable/backgroud_circle"
        android:tag="D" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="80dp"
        android:background="@android:color/black" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingEnd="0dp"
        android:paddingStart="81dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp">
                <ImageView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hebat"/>
            </LinearLayout>

            <View
                android:id="@+id/target"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_main" />

            <TextView
                android:id="@+id/question"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Alif"
                android:textSize="30dp"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
